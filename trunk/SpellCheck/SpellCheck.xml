<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="SpellCheck.lua"/>
	<Frame name="SpellCheck"> 
		<Scripts> 
			<OnUpdate>
				SpellCheck_ShowSpells();
			</OnUpdate>
		</Scripts>
		<Size>
			<AbsDimension x="24" y="24" />
		</Size>
		<Anchors>
			<Anchor point="RIGHT" relativeTo="TargetFrame">
				<Offset>
					<AbsDimension x="0" y="0" />
				</Offset>
			</Anchor>
		</Anchors>
	</Frame>
	<Button name="SpellCheck_SpellButton_Template" inherits="SecureActionButtonTemplate" hidden="false" virtual="true">
		<Size>
			<AbsDimension x="24" y="24"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentIcon"/>
			</Layer>
		</Layers>
	</Button>
</Ui>
