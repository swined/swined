RewriteEngine	On
RewriteBase	/

RewriteRule	^$	cgi-bin/list.plc
RewriteRule	^login$	cgi-bin/login.plc
RewriteRule	^upload$	cgi-bin/upload.plc

RewriteRule	^(\d+).tar$	cgi-bin/get.plc?id=$1

RewriteRule	^stop/(\d+|all)$	cgi-bin/action.plc?action=stop&id=$1
RewriteRule	^start/(\d+|all)$	cgi-bin/action.plc?action=start&id=$1
RewriteRule	^delete/(\d+)$	cgi-bin/action.plc?action=delete&id=$1

AuthType Basic
AuthName "WebTornado"
AuthUserFile /etc/webtornado.auth
Require valid-user
