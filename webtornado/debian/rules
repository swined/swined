#!/usr/bin/make -f
# -*- makefile -*-

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: build-stamp
	test -e build || mkdir build
	cp -R {bin,www,pm} build
	perlcc -B build/www/cgi-bin/list.pl -o build/www/cgi-bin/list.pl
	perlcc -B build/www/cgi-bin/action.pl -o build/www/cgi-bin/action.pl
	perlcc -B build/www/cgi-bin/upload.pl -o build/www/cgi-bin/upload.pl
	perlcc -B build/www/cgi-bin/get.pl -o build/www/cgi-bin/get.pl	

build-stamp: configure-stamp 
	dh_testdir
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -rf build
	rm -f build-stamp configure-stamp
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs
	cp -R build/* $(CURDIR)/debian/webtornado/usr/share/webtornado
	cp webtornado.conf $(CURDIR)/debian/webtornado/etc
	touch $(CURDIR)/debian/webtornado/etc/webtornado.auth


binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installcron
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
